<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/post_news_button"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            motion:layout_constraintTop_toTopOf="@+id/weather" />
        <Constraint
            android:id="@+id/search_icon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="62dp"
            android:layout_height="63dp"
            motion:layout_constraintTop_toBottomOf="@+id/weather"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
        <Constraint
            android:id="@+id/home_page_search"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintTop_toBottomOf="@+id/search_icon"
            android:layout_marginStart="10dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/homeRecycler"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/home_page_search"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/post_news_button"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            motion:layout_constraintTop_toTopOf="@+id/weather" />
        <Constraint
            android:id="@+id/search_icon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="62dp"
            android:layout_height="63dp"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@+id/weather"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
        <Constraint
            android:id="@+id/home_page_search"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintTop_toBottomOf="@+id/search_icon"
            android:layout_marginStart="10dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/homeRecycler"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/home_page_search"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
        <!-- 点击-->
        <OnClick />
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchRegionId="@+id/home_page_search" />
    </Transition>
</MotionScene>